@model QuestionnarieApp_.ViewModels.EditRolesViewModel

<h2>Edit Roles for @Model.UserName</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Roles</label>
        @foreach (var role in ViewBag.AllRoles)
        {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="role_@role" name="SelectedRoles" value="@role"
                @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>
