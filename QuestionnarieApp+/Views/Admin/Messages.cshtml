<h2>User Messages</h2>
<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <a asp-action="Conversation" asp-route-userId="@user.Id" class="btn btn-primary">View Conversation</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
