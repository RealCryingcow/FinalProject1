@model QuestionnarieApp_.ViewModels.QuestionnaireViewModel

<h2>Submit Answers for @Model.Title</h2>

<form asp-action="AddSubmission" method="post">
    <input type="hidden" name="questionnaireId" value="@Model.Id" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        var question = Model.Questions[i];
            <div class="mb-4">
                <h5>@question.Text</h5>
            @foreach (var option in question.Options)
            {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" 
                                   name="selectedOptionIds[@i]" 
                                   value="@option.Id" 
                                   id="option_@option.Id">
                            <label class="form-check-label" for="option_@option.Id">
                        @option.Text
                            </label>
                        </div>
            }
            </div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
